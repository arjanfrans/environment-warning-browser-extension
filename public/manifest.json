{
  "name": "Environment Warning",
  "description": "Google Chrome Extension to assist development by warning you about the environment you are currently on.",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "optional_host_permissions": ["*://*/*"],
  "incognito": "spanning",
  "optional_permissions": [
    "scripting"
  ],
  "permissions": [
    "storage",
    "tabs"
  ],
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "options_page": "options.html"
}
